{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    //"typeRoots": ["node_modules/@types"],
    "pretty": true,
    "sourceMap": true,
    "allowJs": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "compileOnSave": false,
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/**/*.json", ".env"],
}
