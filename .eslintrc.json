{
    "extends": "standard-with-typescript",
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "rules": {
        "quotes": 2,
        "semi": 2,
        "no-unused-vars": 2,
        "no-console": 1
    },
    "ignore": [
        "**/*.spec.ts",
        "**/*.d.ts"
    ],
    "ignorePatterns": [
        "dist",
        "src/**/*.js"
    ]
}