{
    "extends": "standard-with-typescript",
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "semi": 2,
        "no-unused-vars": 2,
        "no-console": 1,
        "@typescript-eslint/no-floating-promises": "off"
    },
    "ignore": [
        "**/*.spec.ts",
        "**/*.d.ts"
    ],
    "ignorePatterns": [
        "dist",
        "src/**/*.js"
    ]
}